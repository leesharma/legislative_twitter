
<h4>
  <%= link_to legislation.title, legislation %>
  <small><%= legislation.created_at_time %></small>
</h4>
<p><%= truncate(strip_tags(legislation.body),
                length: 200,
                omission: "... (length: #{legislation.body.length} characters)") %>
</p>
<%= link_to 'Show', legislation, class:'tiny button' %>
<%= link_to 'Edit', edit_legislation_path(legislation),
               class:'tiny button' %>
<%= link_to('Delete', legislation,
            method: "delete", class: 'tiny alert button',
            data: { confirm: 'Are you sure you want to delete this?'}) %>