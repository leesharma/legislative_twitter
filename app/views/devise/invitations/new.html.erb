<h4><%= t 'devise.invitations.new.header' %></h4>

<%= simple_form_for resource, as: resource_name,
                    url: invitation_path(resource_name), html: {method: :post} do |f| %>
  <%= devise_error_messages! %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <%= f.input field %>
  <% end -%>

  <%= f.button :submit, value: t('devise.invitations.new.submit_button'), class: 'expand' %>
<% end %>
