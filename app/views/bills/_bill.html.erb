<div class="row">
  <div class="col s12">
    <div class="card bill hoverable">
      <!--Bill Blurb:
        cache updates whenever an update to bill (or dependents)
        is detected-->
        <% cache ['bill', bill] do %>

          <div class="card-content blue-grey-text text-darken-4">
            <!--Title and Subtitle-->
            <span class="card-title">
              <%= bill.numbering :abbreviation %>

              <!-- Admin Buttons -->
              <% if user_signed_in? %>
                <span class="right admin">
                  <%= link_to material_icon('mode_edit'), edit_bill_path(bill) %>
                  <%= link_to material_icon('close'), bill,
                              class: 'alert-text',
                              method: 'delete',
                              data: { confirm: 'Are you sure you want to delete this?'} %>
                </span>
              <% end %>
            </span>

            <!--Body-->
            <p class="flow-text"><%= bill.title %></p>
            <p class="badge grey-text sponsor"><%= meta_header bill %></p>
            <!--<p><%#= truncated_body bill %></p>-->

          </div>

          <div class="card-action">
            <!-- Bill Options -->
            <%= link_to 'PDF', bill_path(id: bill.id, format: 'pdf') %>
            <%= link_to 'Show', bill %>
          </div>
        <% end %>
    </div>
  </div>
</div>
