<!--Add Level Field-->
<fieldset>
  <div class="row field">
    <div class="small-12 columns">
      <b>Sub Section (a.)</b>
      <%= f.link_to_remove 'remove', class: 'right alert tiny button' %>
    </div>
  </div>

  <!-- content -->
  <%= f.input :text, label: 'Sub Section Content (no paragraphs)',
              placeholder: 'only shown if there are no paragraphs; otherwise, use chapeau and continuation.' %>

  <%= f.input :chapeau, label: 'Chapeau (content before paragraphs)' %>
  <%= f.input :continuation, label: 'Continuation (content after paragraphs)' %>

  <!-- paragraphs -->
  <%= f.fields_for :paragraphs do |builder| %>
      <%= render 'bills/levels_forms/paragraphs_form', f: builder %>
  <% end %>
  <%= f.link_to_add '+ add a paragraph', :paragraphs, class: 'small right button' %>
</fieldset>
