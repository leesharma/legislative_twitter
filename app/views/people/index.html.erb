<% if user_signed_in? %>
      <%= link_to material_icon('add', align: 'left') + 'New Person', new_person_path, class: 'right admin btn-floating' %>
<% end %>

<h4>Councilmembers</h4>

<div class="row">
  <% @people.each do |person| %>
    <div class="col l3 m4 s12">
      <div class="card">
        <div class="card-image">
          <img src="http://www.placehold.it/200x200/546e7a/78909c/&t=TCT">
        </div>
        <div class="card-content">
          <span class="light card-title"><%= person.name %></span>
          <p>(D, I)</p>
          <p>District #3</p>
        </div>
        <div class="card-action">
          <%= link_to 'Profile', person %>
        </div>
        <% if user_signed_in? %>
          <div class="teal lighten-1 admin card-action">
            <%= link_to 'edit', edit_person_path(person), class: 'white-text' %>
            <%= link_to 'delete', person, class: 'white-text',
              method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
    <div class="admin">
      <h4>Admins</h4>
      <ul>
        <% User.all.each do |admin| %>
            <li><%= admin.email %></li>
        <% end %>
      </ul>
    </div>
<% end %>
