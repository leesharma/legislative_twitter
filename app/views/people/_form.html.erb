<%= simple_form_for @person  do |f| %>
  <% flash_errors_for @person %>

  <%= f.input :first %>
  <%= f.input :last %>
  <%= f.input :bio %>

  <fieldset>
    <legend>Committee Memberships</legend>
    <%= f.association :organizations, as: :check_boxes, label: false %>
  </fieldset>

  <%= f.button :submit, class: 'expand' %>
<% end %>
