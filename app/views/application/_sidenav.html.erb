<div class="large-3 pull-9 columns">

  <br />
  <%= link_to image_tag('http://mediad.publicbroadcasting.net/p/wamc/files/201501/TROY.jpg', class: 'center'), root_url %>
  <br /><br />

  <h4>Search</h4>

  <%= form_tag search_path, :method => 'get' do %>
      <div class="row collapse">
        <div class="small-10 columns">
          <%= text_field_tag :search, params[:search], placeholder: 'Search for Bill' %>
        </div>
        <div class="small-2 columns">
          <%= submit_tag 'Go', :name => nil, class: 'button postfix' %>
        </div>
      </div>
  <% end %>

  <h4>Navigation</h4>
  <ul class="side-nav">
    <li><%= link_to 'Bill', bills_path %></li>
    <li><%= link_to 'Organizations', organizations_path %></li>
    <li><%= link_to 'Meetings', meetings_path %></li>
    <li><%= link_to 'People', people_path %></li>
  </ul>

  <% if admin_signed_in? %>
  <div class="admin panel">
    <h4>Admin</h4>
    <ul class="side-nav">
      <li><%= link_to 'Add New Bill', new_bill_path %></li>
      <li><%= link_to 'Add New Meeting', new_meeting_path %></li>
      <li><%= link_to 'Add New Person', new_person_path %></li>
    </ul>
  </div>
      <% end %>


</div>